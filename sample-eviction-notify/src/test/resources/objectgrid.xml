<objectGridConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://ibm.com/ws/objectgrid/config ../objectGrid.xsd"
 xmlns="http://ibm.com/ws/objectgrid/config">

    <objectGrids>
        <objectGrid name="Grid" txTimeout="45">
        	<!-- Register the eviction event watcher with the grid -->
	        <bean id="ObjectGridEventListener" 
	           className="com.devwebsphere.evictionnotifier.EvictionEventPublisher">
	           <property 
	              name="evictQMapName" 
	              type="java.lang.String"  
	              value="EvictQ" /> <!-- The q map to use for eviction events -->
	           <property 
	              name="mapNameList" 
	              type="java.lang.String"  
	              value="Map" /> <!-- comma delimited list of Map names -->
	       </bean>
	       
	       <!-- Data Map evicts data after 60 seconds -->
           <backingMap name="Map"  lockStrategy="PESSIMISTIC" ttlEvictorType="LAST_ACCESS_TIME" timeToLive="20"/>
           
           <!-- Evict Q Map evicts data 120 seconds after it's inserted  copyMode="COPY_TO_BYTES" -->
           <backingMap name="EvictQ"  lockStrategy="PESSIMISTIC" ttlEvictorType="CREATION_TIME" timeToLive="600"/>
           
           <!-- We need this to be able to do queries on Maps -->
	       <querySchema>
	           <mapSchemas>
	           <mapSchema
	             mapName="EvictQ"
	             valueClass="com.devwebsphere.evictionnotifier.EvictEntry"
	             primaryKeyField="key"
	             accessType="PROPERTY"/>
	           </mapSchemas>
	       </querySchema>
        </objectGrid>
    </objectGrids>
</objectGridConfig>
