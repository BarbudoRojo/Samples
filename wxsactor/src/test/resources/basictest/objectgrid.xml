<objectGridConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ibm.com/ws/objectgrid/config ../objectGrid.xsd"
	xmlns="http://ibm.com/ws/objectgrid/config">

	<objectGrids>
		<!-- always specify a transaction timeout, the default lock timeout is 
			also 15 -->
		<!-- for debugging, do not set a tx timeout, txTimeout="15" -->
		<objectGrid name="Grid">

			<bean id="ObjectGridEventListener"
				className="com.devwebsphere.wxs.asyncserviceimpl.ChainedShardEvents" />

			<!-- These two maps hold our exactly once message requests and their result, 
				we want to remove anything -->
			<!-- that survives for 10 minutes or more (600 seconds) -->
			<!-- ttlEvictorType="CREATION_TIME" timeToLive="10" -->

			<!-- The evictor removes unused messages over 2 mins old -->
			<!-- This map stores message requests -->
			<backingMap name="Queue" lockStrategy="PESSIMISTIC" />
			<!-- This map stores message results and allows duplicate sends to be 
				ignored within the evictor time -->
			<backingMap name="IdHistory" lockStrategy="PESSIMISTIC"
				ttlEvictorType="CREATION_TIME" timeToLive="120" />

			<!-- This map stores results from chained transactions -->
			<backingMap name="ChainedResults" lockStrategy="PESSIMISTIC"
				ttlEvictorType="CREATION_TIME" timeToLive="120" />


			<!-- This is used for UUIDs -->
			<backingMap name="System" lockStrategy="PESSIMISTIC" />

			<!-- Application Stuff -->
			<backingMap name="INV_LEVEL" lockStrategy="PESSIMISTIC" />
		</objectGrid>
	</objectGrids>
</objectGridConfig>
